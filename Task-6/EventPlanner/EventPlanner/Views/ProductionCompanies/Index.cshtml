@model IEnumerable<EventPlanner.Models.ProductionCompany>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.StaffSize)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffSize)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductionCompanyId" class="btn btn-success">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ProductionCompanyId" class="btn btn-secondary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ProductionCompanyId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
